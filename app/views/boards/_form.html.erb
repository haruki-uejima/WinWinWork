<%= render 'shared/error_messages' %>

<%= form_with model: board do |f| %>
  <div class="form-group">
    <%= f.label :person_name, '投稿者　※必須' %>
    <%= f.text_field :person_name, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :company_name, '発注企業名　※必須' %>
  <%= f.text_field :company_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :work_place, '勤務地　※必須' %>
    <%= f.text_field :work_place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, '本文　※必須' %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <span>【職種】</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :namen) do |tag| %>
      <div class="form-check">
        <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <span>シェア</span>
    <%  %>
  </div>
  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
